{
  "name": "portal-betina",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Portal de atividades neuropedagógicas para crianças com autismo, TDAH e outras necessidades cognitivas",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext js,jsx --fix",
    "format": "prettier --write 'src/**/*.{js,jsx,css}'",
    "check-format": "prettier --check 'src/**/*.{js,jsx,css}'",
    "validate": "npm run lint && npm run check-format",
    "validate-components": "node validate-components.js",
    "validate-integration": "node integration-test.js",
    "test-system": "npm run validate-components && npm run validate-integration",
    "preview": "vite preview",    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "npm run test:orchestrator && npm run test:phases",
    "test:orchestrator": "node test-orchestrator-basic.js && node test-orchestrator-integration.js",
    "test:phases": "node test-phase2-quick.js && node test-phase3.js && node test-phase3-2.js",
    "test:e2e": "node teste-conectividade-e2e.mjs && node teste-e2e-pratico.mjs",
    "test:all": "npm test && npm run test:integration && npm run test:e2e",
    "check-deps": "npm audit",
    "docker:build": "docker build -t portal-betina .",
    "docker:run": "docker run -p 3000:3000 portal-betina",
    "docker:dev": "docker-compose up -d",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up -d",
    "install:all": "npm install && npm run check-deps",
    "clean": "rm -rf node_modules dist .vite",
    "reinstall": "npm run clean && npm install",
    "generate-index": "node scripts/generate-index.js"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.0.0",
    "@tensorflow/tfjs": "^4.22.0",
    "@tensorflow/tfjs-backend-cpu": "^4.22.0",
    "@tensorflow/tfjs-backend-webgl": "^4.22.0",
    "axios": "^1.9.0",
    "bcrypt": "^5.1.1",
    "chart.js": "^4.4.9",
    "chartjs-adapter-date-fns": "^3.0.0",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.0",
    "framer-motion": "^10.16.4",
    "helmet": "^7.2.0",
    "i18next": "^23.0.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "lucide-react": "^0.513.0",
    "pg": "^8.16.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-csv": "^2.2.2",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^2.0.0",
    "react-i18next": "^14.0.0",
    "styled-components": "^6.1.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "jsdom": "^23.0.0",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3",
    "terser": "^5.19.2",
    "vite": "^6.3.5",
    "vitest": "^3.2.3"
  }
}
