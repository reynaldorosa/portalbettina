{
  "name": "portal-betina-database-tests",
  "version": "1.0.0",
  "description": "Testes unit√°rios para o DatabaseService do Portal Betina - Autism Therapy Optimization",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:autism-algorithms": "jest --testNamePattern='Autism Therapy ML'",
    "test:security": "jest --testNamePattern='Security and Privacy'",
    "test:performance": "jest --testNamePattern='Performance'"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/src/services/jest.setup.js"],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "collectCoverageFrom": [
      "src/services/databaseService.js",
      "!src/services/*.test.js",
      "!src/services/jest.setup.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 85,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": ["<rootDir>/src/services/**/*.test.js"],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "moduleFileExtensions": ["js", "json"],
    "verbose": true,
    "testTimeout": 10000
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "babel-jest": "^29.5.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0"
  }
}
