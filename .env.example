# Arquivo de configuração de ambiente de exemplo
# Copie este arquivo para .env e ajuste conforme necessário

# ======================================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# ======================================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=betina_user
DB_PASSWORD=betina_password
DB_NAME=betina_db

# Configurações SSL do Banco (Produção)
DB_SSL_CA=
DB_SSL_CERT=
DB_SSL_KEY=
DB_SSL_REJECT_UNAUTHORIZED=true

# ======================================================
# CONFIGURAÇÕES DA API
# ======================================================
API_PORT=3000
API_HOST=localhost
API_BASE_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters
JWT_EXPIRES_IN=24h
JWT_ISSUER=portal-betina
JWT_AUDIENCE=betina-users
BCRYPT_ROUNDS=12

# ======================================================
# CONFIGURAÇÕES DE CORS
# ======================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:4173
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Content-Type,Authorization,X-Requested-With,Accept,Origin

# ======================================================
# RATE LIMITING
# ======================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# ======================================================
# PERFORMANCE & CACHE
# ======================================================
ENABLE_COMPRESSION=true
ENABLE_CACHE=true
CACHE_TTL=3600
VITE_CACHE_TTL=300

# ======================================================
# DATABASE POOL
# ======================================================
CONNECTION_POOL_MIN=2
CONNECTION_POOL_MAX=10
CONNECTION_TIMEOUT=60000
IDLE_TIMEOUT=30000
QUERY_TIMEOUT=30000

# ======================================================
# SECURITY
# ======================================================
SECURITY_HEADERS_ENABLED=true
HELMET_ENABLED=true
TRUST_PROXY=false

# ======================================================
# CONFIGURAÇÕES DO FRONTEND (VITE)
# ======================================================
VITE_APP_TITLE=Portal Betina
VITE_API_URL=http://localhost:3000
VITE_APP_VERSION=1.0.0
VITE_BATCH_SIZE=50
VITE_ENVIRONMENT=development

# ======================================================
# CONFIGURAÇÕES DE AMBIENTE & MONITORAMENTO
# ======================================================
NODE_ENV=development
LOG_LEVEL=info
DEBUG_MODE=false
ENABLE_METRICS=false
HEALTH_CHECK_ENABLED=true
METRICS_COLLECTION_ENABLED=true
PERFORMANCE_MONITORING=true

# ======================================================
# CONFIGURAÇÕES DE IA (DEEPSEEK)
# ======================================================
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_API_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat
AI_ENABLED=false
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=1000

# ======================================================
# CONFIGURAÇÕES LEGADAS (MANTER COMPATIBILIDADE)
# ======================================================
VITE_API_HOST=localhost
VITE_API_PORT=3000
VITE_PRODUCTION_API_URL=https://api.betina.com
VITE_API_TIMEOUT=15000
VITE_API_RETRY_ATTEMPTS=3
VITE_SYNC_INTERVAL=30000
VITE_COMPRESSION_ENABLED=true
VITE_ENCRYPTION_ENABLED=true
VITE_ENABLE_CACHE=true
VITE_DEBUG_MODE=true
VITE_METRICS_INTERVAL=2000
VITE_LOG_LEVEL=debug
VITE_DB_URL=postgresql://betina_user:betina_password@localhost:5432/betina_db
VITE_VERSION=2.0.0
VITE_API_KEY=your_api_key_here
DOCKER_ENV=true
FRONTEND_PORT=5173
NGINX_PORT=80
NGINX_HTTPS_PORT=443
DB_EXTERNAL_PORT=5432

# ======================================================
# CONFIGURAÇÕES DE CORS
# ======================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ======================================================
# CONFIGURAÇÕES DE RATE LIMITING
# ======================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# ======================================================
# CONFIGURAÇÕES DE DEEPSEEK AI
# ======================================================
VITE_DEEPSEEK_API_KEY=your_deepseek_api_key_here
VITE_DEEPSEEK_API_URL=https://api.deepseek.com/v1
VITE_DEEPSEEK_MODEL=deepseek-chat
VITE_DEEPSEEK_MAX_TOKENS=2048
VITE_DEEPSEEK_TEMPERATURE=0.7
VITE_DEEPSEEK_RETRY_DELAY_MS=2000
VITE_DEEPSEEK_FALLBACK_ENABLED=true
